############################# Routes #############################

# index
GET     /          controllers.HomeController.index

#get users by id
GET /user/:id      controllers.UserController.retrieveUser(id: Long)

# create a user
POST /user        controllers.UserController.createUser

#get all products
GET /products      controllers.ProductController.retrieveProducts

#get product by id
GET /product/:id      controllers.ProductController.retrieveProduct(id: Long)

# create a product
POST /product/:userId         controllers.ProductController.createProduct(userId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
